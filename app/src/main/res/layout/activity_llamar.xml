<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.alvaaro.examenrecusegundajavierrl.Llamada">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Servicio de Llamada"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="61dp"
        android:text="Telefono:" />

    <TextView
        android:id="@+id/tvDestinatario"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNumero"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:text="Destinatario:" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumero"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Pulse para llamar"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDestinatario"
        android:layout_alignBottom="@+id/tvDestinatario"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginStart="25dp"
        android:text="nombre" />

    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNom"
        android:layout_alignTop="@+id/tvNumero"
        android:text="numero" />

    <ImageButton
        android:id="@+id/ibLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        app:srcCompat="@drawable/llamar" />

</RelativeLayout>